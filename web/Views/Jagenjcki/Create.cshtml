@model web.Models.Jagenjcek

@{
    ViewData["Title"] = "Dodaj";
}

<h1>Dodaj jagenjčka</h1>

<h4>Jagenjček</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="skritIdJagenjcka" class="control-label"></label>
                <input asp-for="skritIdJagenjcka" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="IdJagenjcka" class="control-label"></label>
                <input asp-for="IdJagenjcka" class="form-control" />
                <span asp-validation-for="IdJagenjcka" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KotitevID" class="control-label"></label>
                <select asp-for="KotitevID" class ="form-control" asp-items="ViewBag.KotitevID"></select>
            </div>
            <div class="form-group">
                <label asp-for="spol" class="control-label"></label>
                <input asp-for="spol" class="form-control" />
                <span asp-validation-for="spol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazaj na seznam</a>
</div>

