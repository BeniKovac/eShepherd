@model IEnumerable<web.Models.Oven>

@{
    ViewData["Title"] = "Ovni";
}

<h1>Ovni</h1>

<p>
    <a asp-action="Create">Dodaj ovna</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.creda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatumRojstva)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pasma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ovca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SteviloSorojencev)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stanje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opombe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Poreklo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.creda.CredeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatumRojstva)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pasma)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ovca.OvcaID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SteviloSorojencev)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stanje)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opombe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Poreklo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OvenID">Uredi</a> |
                <a asp-action="Details" asp-route-id="@item.OvenID">Podrobnosti</a> |
                <a asp-action="Delete" asp-route-id="@item.OvenID">Odstrani</a>
            </td>
        </tr>
}
    </tbody>
</table>
