@{
    ViewData["Title"] = "Domača stran";
}

<div class="text-center">
    <h1 class="display-4">Dobrodošli v aplikaciji eShepherd</h1>
    <p>Aplikacija je namenjena rejcem ovac za lažje vodenje evidence.</p>

<div class="card-deck">
    <div class="card">
        <div class="card-block">
            <h4 class="card-title"><a asp-controller="Kotitve" asp-action="Create">Dodaj kotitev</a></h4>
            
        </div>
        <a href="@Url.Action("Create", "Kotitve")">
            <img src="@Url.Content("~/Images/kotitev.png")" alt="" style="max-height: 200px; max-width: 200px;" />
        </a>
    </div>
    <div class="card">
        <div class="card-block">
            <h4 class="card-title"> <a asp-controller="Gonitve" asp-action="Create">Dodaj gonitev</a></h4>
           
        </div>
        <a href="@Url.Action("Create", "Gonitve")">
            <img src="https://thumbs.dreamstime.com/b/two-funny-cartoon-sheep-love-14799691.jpg" alt="" style="max-height: 200px; max-width: 200px;" />
        </a>
    </div>

    <div class="card">
        <div class="card-block">
            <h4 class="card-title"><a asp-controller="Ovce" asp-action="Create">Dodaj ovco</a></h4>
            

        </div>
        <a href="@Url.Action("Create", "Ovce")">
            <img src="ovca.png" alt="" style="max-height: 200px; max-width: 200px;" />
        </a>
    </div>

    <div class="card">
        <div class="card-block">
            <h4 class="card-title"><a asp-controller="Crede" asp-action="Create">Dodaj čredo</a></h4>
            
        </div>
       <a href="@Url.Action("Create", "Crede")">
